{
  "name": "deep-project-researcher",
  "version": "0.1.0",
  "description": "OpenCode plugin that discovers similar open-source projects and helps analyze/adapt code from them",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "bun build index.ts --outdir dist --target node",
    "dev": "bun build index.ts --outdir dist --target node --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:single": "bun test",
    "test:watch": "bun test --watch",
    "check": "bun run type-check && bun run lint && bun run test"
  },
  "keywords": [
    "opencode",
    "plugin",
    "research",
    "open-source",
    "code-analysis"
  ],
  "author": "DeepProjectResearcher",
  "license": "MIT",
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.218",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}